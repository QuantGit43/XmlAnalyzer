<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:XmlAnalyzer.ViewModels"
             x:Class="XmlAnalyzer.MainPage"
             Title="XmlAnalyzer">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" Padding="20" RowSpacing="10">
        <Frame Grid.Row="0" BorderColor="Gray" CornerRadius="5" Padding="10">
            <HorizontalStackLayout Spacing="15">
                <Button Text="📂 Відкрити XML" Command="{Binding LoadFileCommand}" WidthRequest="150"/>
                <Label Text="{Binding StatusMessage}" 
                       VerticalOptions="Center" 
                       TextColor="Black"/>
            </HorizontalStackLayout>
        </Frame>

        <VerticalStackLayout Grid.Row="1" Spacing="10">
            <Label Text="Параметри пошуку" FontAttributes="Bold" FontSize="16"/>
            <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                <Picker Grid.Column="0" Title="Оберіть категорію" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"/>
                <Entry Grid.Column="1" Placeholder="Пошук за назвою..." Text="{Binding SearchKeyword}"/>
            </Grid>

            <Label Text="Метод аналізу:" FontSize="14"/>
            <HorizontalStackLayout Spacing="20">
                <RadioButton Content="LINQ to XML" IsChecked="{Binding IsLinqSelected}"/>
                <RadioButton Content="DOM API" IsChecked="{Binding IsDomSelected}"/>
                <RadioButton Content="SAX API" IsChecked="{Binding IsSaxSelected}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center">
            <Button Text="🔍 Пошук" Command="{Binding SearchCommand}" BackgroundColor="#2196F3"/>
            <Button Text="🧹 Очистити" Command="{Binding ClearCommand}" BackgroundColor="Gray"/>
            <Button Text="📄 В HTML" Command="{Binding ExportCommand}" BackgroundColor="#4CAF50"/>
        </HorizontalStackLayout>

        <CollectionView Grid.Row="3" ItemsSource="{Binding SoftwareList}">
            <CollectionView.Header>
                <Grid ColumnDefinitions="2*, 1.5*, 1.5*, 2*" Padding="5" BackgroundColor="#EEEEEE">
                    <Label Text="Назва" FontAttributes="Bold" Grid.Column="0"/>
                    <Label Text="Автор" FontAttributes="Bold" Grid.Column="1"/>
                    <Label Text="Категорія" FontAttributes="Bold" Grid.Column="2"/>
                    <Label Text="Інфо" FontAttributes="Bold" Grid.Column="3"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="2*, 1.5*, 1.5*, 2*" Padding="5">
                        <Label Text="{Binding Name}" Grid.Column="0"/>
                        <Label Text="{Binding Author}" Grid.Column="1"/>
                        <Label Text="{Binding Category}" Grid.Column="2"/>
                        <Label Text="{Binding Description}" Grid.Column="3" TextColor="Gray" FontSize="12"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="Результатів немає" HorizontalOptions="Center" VerticalOptions="Center"/>
            </CollectionView.EmptyView>
        </CollectionView>

        <Button Grid.Row="4" Text="Вихід" Command="{Binding ExitCommand}" BackgroundColor="#D32F2F" HorizontalOptions="End"/>
    </Grid>
</ContentPage>